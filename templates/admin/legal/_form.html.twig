{{ form_start(form, { 'attr': { 'enctype': 'multipart/form-data', 'class': 'space-y-6' } }) }}

{# Title Field #}
<div>
    {{ form_label(form.title, null, { label_attr: { class: 'block font-semibold mb-1 text-gray-700' } }) }}
    {{ form_widget(form.title, { attr: { class: 'w-full p-3 border border-gray-400 rounded' } }) }}
    {{ form_errors(form.title) }}
</div>

{# Content Field #}
<div>
    {{ form_label(form.content, null, { label_attr: { class: 'block font-semibold mb-1 text-gray-700' } }) }}
    {{ form_widget(form.content, { attr: { class: 'w-full p-3 border border-gray-400 rounded h-40' } }) }}
    {{ form_errors(form.content) }}
</div>

{# Slug Field #}
<div>
    {{ form_label(form.slug, null, { label_attr: { class: 'block font-semibold mb-1 text-gray-700' } }) }}
    {{ form_widget(form.slug, { attr: { class: 'w-full p-3 border border-gray-400 rounded' } }) }}
    {{ form_errors(form.slug) }}
</div>

<div class="pt-4">
    <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-5 py-2 rounded font-semibold">
        {{ button_label|default('Save') }}
    </button>
</div>

{{ form_end(form) }}