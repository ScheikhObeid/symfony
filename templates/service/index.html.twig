{% extends 'base.html.twig' %}

{% block title %}Service index{% endblock %}

{% block body %}
<h1>Service index</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>Image</th>
            <th>Priority</th>
            <th>CreatedAt</th>
            <th>UpdatedAt</th>
            <th>CreatedBy</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for service in services %}
        <tr>
            <td>{{ service.id }}</td>
            <td>{{ service.title }}</td>
            <td>{{ service.description }}</td>
            <td>
                {% if service.image %}
                <img src="{{ asset('uploads/services/' ~ service.image) }}" alt="{{ service.title }}"
                    style="width: 100px; height: auto;">
                {% else %}
                <span class="text-muted">No image</span>
                {% endif %}
            </td>
            <td>{{ service.priority }}</td>
            <td>{{ service.createdAt ? service.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            <td>{{ service.updatedAt ? service.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            <td>{{ service.createdBy }}</td>
            <td>
                <a href="{{ path('app_service_show', {'id': service.id}) }}">Show</a> |
                <a href="{{ path('app_service_edit', {'id': service.id}) }}">Edit</a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="9">No records found</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<a href="{{ path('app_service_new') }}">Create new</a>
{% endblock %}