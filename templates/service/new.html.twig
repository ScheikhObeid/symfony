{% extends 'base.html.twig' %}

{% block title %}New Service{% endblock %}

{% block body %}
<h1 class="text-2xl font-bold mb-4">Create New Service</h1>

{{ form_start(form, { 'attr': { 'enctype': 'multipart/form-data', 'class': 'space-y-6' } }) }}
<div>
    {{ form_label(form.title, null, {'label_attr': {'class': 'block font-medium'}}) }}
    {{ form_widget(form.title, {'attr': {'class': 'w-full p-2 border rounded'}}) }}
    {{ form_errors(form.title) }}
</div>

<div>
    {{ form_label(form.description, null, {'label_attr': {'class': 'block font-medium'}}) }}
    {{ form_widget(form.description, {'attr': {'class': 'w-full p-2 border rounded'}}) }}
    {{ form_errors(form.description) }}
</div>

<div>
    {{ form_label(form.priority, null, {'label_attr': {'class': 'block font-medium'}}) }}
    {{ form_widget(form.priority, {'attr': {'class': 'w-full p-2 border rounded'}}) }}
    {{ form_errors(form.priority) }}
</div>

<div>
    {{ form_label(form.imageFile, null, {'label_attr': {'class': 'block font-medium'}}) }}
    {{ form_widget(form.imageFile, {'attr': {'class': 'w-full'}}) }}
    {{ form_errors(form.imageFile) }}
</div>

<button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded">
    Save
</button>
{{ form_end(form) }}

<div class="mt-4">
    <a href="{{ path('app_service_index') }}" class="text-blue-500 hover:underline">Back to list</a>
</div>
{% endblock %}