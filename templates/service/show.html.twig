{% extends 'base.html.twig' %}

{% block title %}Service{% endblock %}

{% block body %}
<h1>Service</h1>

<table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ service.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ service.title }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ service.description }}</td>
        </tr>
        <tr>
            <th>imageLink</th>
            <td>{{ service.imageLink }}</td>
        </tr>
        <tr>
            <th>imageLink</th>
            <td>
                {% if service.imageLink %}
                <img src="{{ asset('uploads/services/' ~ service.imageLink) }}" alt="{{ service.title }}"
                    style="width: 100px; height: auto;">
                {% else %}
                <span class="text-muted">No image</span>
                {% endif %}
            </td>
        </tr>
        <tr>
            <th>Priority</th>
            <td>{{ service.priority }}</td>
        </tr>
        <tr>
            <th>CreatedAt</th>
            <td>{{ service.createdAt ? service.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>UpdatedAt</th>
            <td>{{ service.updatedAt ? service.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>CreatedBy</th>
            <td>{{ service.createdBy }}</td>
        </tr>
    </tbody>
</table>

<a href="{{ path('app_service_index') }}">back to list</a>

<a href="{{ path('app_service_edit', {'id': service.id}) }}">edit</a>

{{ include('service/_delete_form.html.twig') }}
{% endblock %}